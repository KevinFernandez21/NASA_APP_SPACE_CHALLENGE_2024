---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import Description from "../components/Description.astro";
import AstroImage from "../components/AstroImage.astro";
---

<Layout title="Welcome!">
  <main>
    <div class="title-layout">
      <Title />
    </div>
    <div class="container-info">
      <div class="description-content">
        <Description />
      </div>
      <div class="animation-content">
        <AstroImage />
      </div>
    </div>
    <div class="section-signals">
      <img src="../src/images/earth.svg" alt="Astro" class="astro-image" />
    </div>
  </main>
</Layout>

<style>
  main {
    margin: -30px 50px;
    padding: 0;
    height: 100vh;
    display: flex;
    flex-direction: column;
    max-width: 100%;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  .title-layout {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 15%;
  }

  .container-info {
    display: flex;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 50%;
  }

  .description-content {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin: 0;
    padding: 0;
    width: 60%;
    height: 100%;
  }

  .animation-content {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
    padding: 0;
    width: 30%;
    height: 100%;
  }

  .section-signals{
    width: 100%;
    height: 40%;
    margin-top: 4rem;
  }
</style>
